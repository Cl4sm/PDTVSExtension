{
  "name": "pdt-syntax-highlighter",
  "displayName": "PDT Syntax Highlighter",
  "description": "Highlight's syntax for PyDataTask",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:yaml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
        {
            "id": "yaml",
            "extensions": [".yaml", ".yml"],
            "aliases": ["YAML"]
        }
    ],
    "semanticTokenScopes": [
        {
            "language": "yaml",
            "scopes": {
                "keyword": ["keyword"],
                "string": ["string"],
                "number": ["number"],
                "comment": ["comment"],
                "bash": ["variable.other"]
            }
        }
    ]
},
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9"
  }
}
